# Name Matcher Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration (MySQL)
DB_USER=your_username
DB_PASS=your_password
DB_HOST=localhost
DB_PORT=3307
DB_NAME=your_database_name

# Streaming Configuration
NAME_MATCHER_STREAMING=0
NAME_MATCHER_BATCH_SIZE=5000
NAME_MATCHER_CHECKPOINT_PATH=./checkpoints/

# GPU Configuration
NAME_MATCHER_GPU_HASH_JOIN=0
NAME_MATCHER_GPU_FUZZY_DIRECT_HASH=0
NAME_MATCHER_GPU_FUZZY_FORCE=0
NAME_MATCHER_GPU_FUZZY_DISABLE=0
NAME_MATCHER_GPU_FUZZY_METRICS=1

# Fuzzy Matching Configuration
NAME_MATCHER_FUZZY_THRESHOLD=95
NAME_MATCHER_DIRECT_FUZZY_NORMALIZATION=0

# Logging
RUST_LOG=info
RUST_BACKTRACE=1

# Performance Tuning
NAME_MATCHER_PARALLEL_NORMALIZE=1
NAME_MATCHER_MAX_CONNECTIONS=64
NAME_MATCHER_CONNECTION_TIMEOUT=5

